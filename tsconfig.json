{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2023"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@agents/*": ["agents/*"],
      "@core/*": ["core/*"],
      "@tests/*": ["tests/*"],
      "@config/*": ["config/*"]
    }
  },
  "include": [
    "agents/**/*.ts",
    "core/**/*.ts",
    "tests/**/*.ts",
    "scripts/**/*.ts",
    "config/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
